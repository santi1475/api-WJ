{
	"name": "Existing Docker Compose (Extend)",

	"dockerComposeFile": [
		"../docker-compose.yml",
		"docker-compose.yml"
	],

	"service": "web",

	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	
	"features": {},

	// CORRECCIÃ“N: Usar variable correcta para Windows
	"mounts": [
		"source=${localEnv:USERPROFILE}/.ssh,target=/root/.ssh,type=bind,readonly"
	],

	"postCreateCommand": "chmod 700 /root/.ssh && chmod 600 /root/.ssh/* && chmod 644 /root/.ssh/*.pub 2>/dev/null || true",

	"customizations": {
		"vscode": {
			"extensions": [
				"eamodio.gitlens",
				"mhutchie.git-graph",
				"donjayamanne.githistory"
			],
			"settings": {
				"git.enableStatusBarSync": true,
				"gitlens.currentLine.enabled": true,
				"gitlens.statusBar.enabled": true
			}
		}
	}
}